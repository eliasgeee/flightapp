<Page x:ConnectionId='1'
    x:Class="FlightAppEliasGryp.Views.MyOrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlightAppEliasGryp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FlightAppEliasGryp.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <DataTemplate x:Key="OrdersOverviewTemplate"                          >
            <Grid x:ConnectionId='24' Margin="0,11,0,13">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel BorderBrush="LightGray" BorderThickness="0,0,0,1">
                    <TextBlock x:ConnectionId='25'                            FontSize="20" FontWeight="SemiBold" Style="{ThemeResource ListTitleStyle}"/>
                    <TextBlock x:ConnectionId='26'                                      Style="{ThemeResource ListSubTitleStyle}"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='27'                             HorizontalAlignment="Left"  Margin="0, 0, 0, 8"/>
                        <TextBlock x:ConnectionId='28'                                              FontStyle="Italic" HorizontalAlignment="Right" Margin="8, 0, 0, 8"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="OrderDetailContentTemplate"                          >
            <ScrollViewer x:ConnectionId='3'>
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <TextBlock x:ConnectionId='22'
                    Style="{ThemeResource TitleTextBlockStyle}"
                    HorizontalAlignment="Left"
                                                />
                    </StackPanel>
                    <Grid
                    Margin="0,24"
                    >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Customer name"
                    Grid.Column="0"
                        Grid.Row="0"/>
                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Order Time"
                    Grid.Column="1"
                        Grid.Row="0"/>
                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Order Total"
                    Grid.Column="2"
                        Grid.Row="0"/>
                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Order Quantity"
                    Grid.Column="3"
                        Grid.Row="0"/>
                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Payment Type"
                    Grid.Column="4"
                        Grid.Row="0"/>
                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Total Paid"
                    Grid.Column="5"
                        Grid.Row="0"/>
                        <TextBlock x:ConnectionId='16' HorizontalAlignment="Left" Style="{ThemeResource BodyTextStyle}"                                        
                               Grid.Row="1" Grid.Column="0"/>
                        <TextBlock x:ConnectionId='17' HorizontalAlignment="Left" Style="{ThemeResource BodyTextStyle}"                                             
                               Grid.Row="1" Grid.Column="1"/>
                        <TextBlock x:ConnectionId='18' HorizontalAlignment="Left" Style="{ThemeResource BodyTextStyle}"                           
                               Grid.Row="1" Grid.Column="2"/>
                        <TextBlock x:ConnectionId='19' HorizontalAlignment="Left" Style="{ThemeResource BodyTextStyle}"                                   
                               Grid.Row="1" Grid.Column="3"/>
                        <TextBlock x:ConnectionId='20' HorizontalAlignment="Left" Style="{ThemeResource BodyTextStyle}"                            
                               Grid.Row="1" Grid.Column="4"/>
                        <TextBlock x:ConnectionId='21' HorizontalAlignment="Left" Style="{ThemeResource BodyTextStyle}"                                  
                               Grid.Row="1" Grid.Column="5"/>

                    </Grid>
                    <Grid Margin="0,24,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="15*"/>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="8*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                    Style="{ThemeResource TitleTextBlockStyle}"
                    HorizontalAlignment="Left"
                    Text="Ordered Products"
                                Grid.Row="0"/>

                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Product name"
                    Grid.Column="1"
                                Margin="0,24,0,0"
                                Grid.Row="1"/>
                        <TextBlock
                    HorizontalAlignment="Left"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Quantity"
                                Margin="0,24,0,0"
                    Grid.Column="2"
                                Grid.Row="1"/>
                        <TextBlock
                    HorizontalAlignment="Left"
                                Margin="0,24,0,0"
                    Style="{ThemeResource ListTitleStyle}"
                    Text="Price"
                    Grid.Column="3"
                                Grid.Row="1"/>
                        <ListView x:ConnectionId='4' 
                                                                    
                            SelectionMode="None"
                            Name="OrderDetailProductItems"
                            IsItemClickEnabled="False"
                                Grid.Row="2"
                                Grid.ColumnSpan="4">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Margin" Value="0, 24, 0, 0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate
                                                                    >

                                    <Grid x:ConnectionId='6'>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10*"/>
                                            <ColumnDefinition Width="15*"/>
                                            <ColumnDefinition Width="6*"/>
                                            <ColumnDefinition Width="8*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Image x:ConnectionId='7'                         Stretch='Uniform' MaxHeight="80" MaxWidth="80" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left"/>
                                        <TextBlock x:ConnectionId='8'                      Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left"  TextWrapping="Wrap"/>
                                        <TextBlock x:ConnectionId='9'                        Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left"/>
                                        <TextBlock x:ConnectionId='10'                       Grid.Column="3" Grid.Row="0" HorizontalAlignment="Left"/>

                                        <ListView x:ConnectionId='11'
                                                                                                     
                                                SelectionMode="None"
                                                    Grid.ColumnSpan="4"
                                                Grid.Row="1"
                                                Name="OrderDetailProductPromotions"
                                                IsItemClickEnabled="False"
                                                >
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                    <Setter Property="Margin" Value="0, 24, 0, 0" />
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.ItemTemplate>
                                                <DataTemplate
                                                                           
                                    >
                                                    <Grid x:ConnectionId='13'>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10*"/>
                                                            <ColumnDefinition Width="15*"/>
                                                            <ColumnDefinition Width="6*"/>
                                                            <ColumnDefinition Width="8*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock x:ConnectionId='14'                            Grid.Column="1"/>
                                                        <TextBlock x:ConnectionId='15'                                             Grid.Column="3"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='29' x:Name="LayoutRoot"                           >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='30' x:Name="AdaptiveStates"                                                         >
                <VisualState x:ConnectionId='31' x:Name="DefaultState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>

                <VisualState x:ConnectionId='32' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="OverviewColumn.Width" Value="*" />
                        <Setter Target="DetailColumn.Width" Value="0" />
                        <Setter Target="OrdersOverViewListView.SelectionMode" Value="None" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='33' x:Name="OverviewColumn" Width="320" />
            <ColumnDefinition x:ConnectionId='34' x:Name="DetailColumn" Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock x:ConnectionId='35'
                                                        
            Margin="12,8,8,8"
            Style="{ThemeResource TitleTextBlockStyle}" />

        <ListView x:ConnectionId='36'
            x:Name="OrdersOverViewListView"
            Grid.Row="1"
            ItemContainerTransitions="{x:Null}"
                                                                       
            ItemTemplate="{StaticResource OrdersOverviewTemplate}"
            IsItemClickEnabled="True"
                                                        >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <ContentPresenter x:ConnectionId='37'
            x:Name="DetailContentPresenter"
            Grid.Column="1"
            Grid.RowSpan="2"
            BorderThickness="1,0,0,0"
            Padding="24,0"
            BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                                                               
            ContentTemplate="{StaticResource OrderDetailContentTemplate}"
            >
            <ContentPresenter.ContentTransitions>
                <TransitionCollection />
            </ContentPresenter.ContentTransitions>
        </ContentPresenter>
    </Grid>
</Page>

