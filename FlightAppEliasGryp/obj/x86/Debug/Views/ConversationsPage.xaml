<Page x:ConnectionId='1'
    x:Class="FlightAppEliasGryp.Views.ConversationsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlightAppEliasGryp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FlightAppEliasGryp.Models"
    xmlns:viewmodels="using:FlightAppEliasGryp.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Page.Resources>
        <DataTemplate x:Key="ConversationsOverviewTemplate"                                 >
            <Grid x:ConnectionId='13' Margin="0,11,0,13">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel BorderBrush="LightGray" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:ConnectionId='15'                                               FontSize="14" FontWeight="SemiBold" Style="{ThemeResource ListTitleStyle}" Grid.Column="0"/>
                        <TextBlock x:ConnectionId='16'                                        HorizontalAlignment="Right" Margin="8, 0, 0, 8" Grid.Column="1"/>
                    </Grid>
                    <TextBlock x:ConnectionId='14'                                    Style="{ThemeResource BodyTextStyle}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ConversationDetailContentTemplate"                                 >
            <Grid x:ConnectionId='3' Margin="24, 24, 24, 24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <TextBlock x:ConnectionId='11'                                               Style="{StaticResource PageTitleStyle}"/>
                </StackPanel>
                <ScrollViewer Grid.Row="1">
                    <ListView x:ConnectionId='6'
                                                                    
                        IsItemClickEnabled="False">
                        <ListView.ItemTemplate>
                            <DataTemplate
                                                               >
                                <Grid x:ConnectionId='8'>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:ConnectionId='9'                     />
                                        <TextBlock x:ConnectionId='10'                                    FontStyle="Italic" FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:ConnectionId='4' x:Name="MessageTxt" Grid.Column="0" Margin="0, 0, 24, 0"                                     />
                    <Button x:ConnectionId='5' Content="Send" Grid.Column="1"                     />
                </Grid>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid x:ConnectionId='17' x:Name="LayoutRoot"                           >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='18' x:Name="AdaptiveStates"                                                         >
                <VisualState x:ConnectionId='19' x:Name="DefaultState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                </VisualState>

                <VisualState x:ConnectionId='20' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="OverviewColumn.Width" Value="*" />
                        <Setter Target="DetailColumn.Width" Value="0" />
                        <Setter Target="ConversationsOverViewListView.SelectionMode" Value="None" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:ConnectionId='21' x:Name="OverviewColumn" Width="320" />
            <ColumnDefinition x:ConnectionId='22' x:Name="DetailColumn" Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="12,8,8,8" BorderBrush="LightGray" BorderThickness="0, 0, 0, 1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
            Text="CHATS"
                VerticalAlignment="Bottom"
                Grid.Column="0"
            Style="{ThemeResource TitleTextBlockStyle}" />

            <HyperlinkButton
            Content="+"
            FontSize="32"
            VerticalAlignment="Bottom"
            Grid.Column="1"
            HorizontalAlignment="Right"
                
            />
        </Grid>
    
        <ListView x:ConnectionId='23'
            x:Name="ConversationsOverViewListView"
            Grid.Row="1"
            ItemContainerTransitions="{x:Null}"
                                                                            
            ItemTemplate="{StaticResource ConversationsOverviewTemplate}"
            IsItemClickEnabled="True"
                                                               >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <ContentPresenter x:ConnectionId='24'
            x:Name="DetailContentPresenter"
            Grid.Column="1"
            Grid.RowSpan="2"
            BorderThickness="1,0,0,0"
            Padding="24,0"
            BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                                                                                      
            ContentTemplate="{StaticResource ConversationDetailContentTemplate}"
            >
            <ContentPresenter.ContentTransitions>
                <TransitionCollection />
            </ContentPresenter.ContentTransitions>
        </ContentPresenter>
    </Grid>
</Page>

