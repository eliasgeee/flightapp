<Page x:ConnectionId='1'
    x:Class="FlightAppEliasGryp.Views.ProductDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlightAppEliasGryp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:FlightAppEliasGryp.Models"
    xmlns:helpers="using:FlightAppEliasGryp.Helpers"
    xmlns:winui="using:Windows.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar x:ConnectionId='2' x:Name="commandBar" Height="36" DefaultLabelPosition="Right" Background="Transparent" Grid.Row="0" Margin="0, 0, 48, 0">
            <AppBarButton x:ConnectionId='29' x:Name="buttonDelete" Icon="Delete" Label="Delete" LabelPosition="Default" HorizontalAlignment="Left" Tag="delete"                           />
            <AppBarButton x:ConnectionId='30' x:Name="buttonCancel" Icon="Cancel" Label="Cancel" LabelPosition="Default" HorizontalAlignment="Left" Tag="cancel"                           />
            <AppBarButton x:ConnectionId='31' x:Name="buttonSave" Icon="Save" Label="Save" LabelPosition="Default" HorizontalAlignment="Left" Tag="save"                         />
        </CommandBar>

        <ScrollViewer
            Grid.Row="1"
            VerticalScrollBarVisibility="Visible"
            VerticalScrollMode="Enabled"
            >
            <Grid
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid BorderBrush="LightGray" 
              BorderThickness="0,0,1,1"
              Grid.Row="0"
              Margin="0,0,0,0">

                <StackPanel Margin="12,6">
                    <StackPanel Margin="0,12">
                        <Grid  Margin="6" Height="180">
                            <Grid Background="LightGray">
                                <Image x:ConnectionId='28'                                                
                           Stretch="UniformToFill" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                    <TextBlock x:ConnectionId='23' FontSize="16" FontWeight="Bold"                                       
                           TextAlignment="Center"/>

                    <TextBlock Text="Category" FontSize="12" Margin="0, 12, 0, 0"/>
                    <TextBlock x:ConnectionId='24'                                        FontWeight="SemiBold"/>

                    <TextBlock Text="Price" FontSize="12" Margin="0, 12, 0, 0"/>
                    <TextBlock x:ConnectionId='25'                                         FontWeight="SemiBold"/>

                    <TextBlock Text="Reduced price" FontSize="12" Margin="0, 12, 0, 0"/>
                    <TextBlock x:ConnectionId='26'                                                     FontWeight="SemiBold"/>

                    <TextBlock Text="Stock" FontSize="12" Margin="0, 12, 0, 0"/>
                    <TextBlock x:ConnectionId='27'                                         FontWeight="SemiBold"/>
                </StackPanel>

            </Grid>
            <Grid Grid.Column="1" Grid.Row="0">
                <Grid>
                    <Grid BorderBrush="LightGray" BorderThickness="0, 0, 0, 1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Column="0" Margin="30" Grid.Row="0">
                            <TextBox x:ConnectionId='19' Header="Name"                                        Margin="0, 12, 0, 0" Name="ProductName"/>
                            <ComboBox x:ConnectionId='20' Header="Category"                                     Margin="0, 12, 0, 0"
                                                                                                                                 
                                      Name="ProductCat"/>
                            <TextBox x:ConnectionId='21' Header="Stock"                                        
                                     InputScope="CurrencyAmount"
                                     Margin="0, 12, 0, 0"
                                     Name="ProductPrice"/>
                            <TextBox x:ConnectionId='22' Header="Price"                                         Margin="0, 12, 0, 0"
                                     InputScope="CurrencyAmount"
                                     Name="ProductStock"/>
                        </StackPanel>
                    </Grid>
                </Grid>

            </Grid>
            <Grid
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Padding="8"
            Grid.ColumnSpan="2"
            Grid.Row="1"
            >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid
                BorderBrush="LightGray"
                BorderThickness="0,0,0,1"
                Margin="48,0,48,0"
                Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                    Text="Promotions"
                    FontSize="25"
                    FontWeight="SemiBold"
                    Margin="0,48,0,24"
                    Grid.Column="0"/>
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Margin="0,48,0,24"
                            Orientation="Horizontal"
                            >
                            <TextBlock x:ConnectionId='17'
                                                                                  
                    FontSize="25"
                    FontWeight="SemiBold"
                    />
                            <Button x:ConnectionId='18'
                                Margin="8,0,0,0"
                            Content="Add new"
                                                         
                            />
                        </StackPanel>
                    </Grid>
                <StackPanel
                    Grid.Row="1"
                >
                    <Grid
                        Margin="0,24,0,0"
                        >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="270"/>
                            <ColumnDefinition Width="270"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Text="DESCRIPTION" Margin="48,0,0,0"
                            Foreground="#FFADABAB"
                            />
                        <TextBlock
                            Grid.Column="1"
                            Text="MIN AMOUNT"
                            Foreground="#FFADABAB"
                            />
                        <TextBlock
                            Grid.Column="2"
                            Text="AMOUNT"
                            Foreground="#FFADABAB"
                            />
                        <TextBlock
                            Grid.Column="3"
                            Text="TYPE"
                            Foreground="#FFADABAB"
                            />
                        <TextBlock
                            Grid.Column="4"
                            Text="START"
                            Foreground="#FFADABAB"
                            />
                        <TextBlock
                           Grid.Column="5"
                           Text="END"
                           Foreground="#FFADABAB"
                           />
                    </Grid>
                    <StackPanel
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        >
                        <ListView x:ConnectionId='3'
                            Grid.Row="2"
                                                                                         
                            SelectionMode="None"
                            Name="PromotionItems"
                            IsItemClickEnabled="False"
                            >
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0,8" />
                                    <Setter Property="Margin" Value="0,24,48,0"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate
                                                                      
                                    >
                                    <Grid x:ConnectionId='5'>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="270"/>
                                            <ColumnDefinition Width="270"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:ConnectionId='6'
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            MinWidth="0"
                                            Margin="48,0,0,0"
                                                                                     
                                            FontSize="16"
                                        />
                                        <TextBox x:ConnectionId='7'
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                                                                         
                                                                                    
                                                                    
                                            Width="70"/>
                                        <TextBox x:ConnectionId='8'
                                            Grid.Column="2"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            MinWidth="0"
                                                                                    
                                                                                         
                                                                    
                                            Width="70"/>
                                        <TextBlock x:ConnectionId='9'
                                            Grid.Column="3"
                                            VerticalAlignment="Center"
                                            MinWidth="0"
                                                                          
                                                                    
                                            Width="130"/>
                                            <StackPanel
                                        Orientation="Horizontal"
                                        Grid.Column="4">
                                                <CalendarDatePicker x:ConnectionId='14'
                                            VerticalAlignment="Center"
                                            MinWidth="0"
                                                                    
                                                                               
                                                                                
                                            />
                                                <ComboBox x:ConnectionId='15'
                                                    VerticalAlignment="Center"
                                                    Margin="4, 0, 0, 0"
                                                                                                  
                                                                                
                                                                            
                                                                                                                                          
                                                        />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Margin="4, 0, 0, 0"
                                                    Text=":"
                                                    />
                                                <ComboBox x:ConnectionId='16'
                                                    VerticalAlignment="Center"
                                                                                                    
                                                                            
                                                                                  
                                                          Margin="4, 0, 0, 0"
                                                                                                                                                  />
                                            </StackPanel>
                                            <StackPanel
                                        Orientation="Horizontal"
                                        Grid.Column="5">
                                                <CalendarDatePicker x:ConnectionId='11'
                                            VerticalAlignment="Center"
                                            MinWidth="0"
                                                                              
                                                                    
                                                                             
                                            />
                                                <ComboBox x:ConnectionId='12'
                                                    VerticalAlignment="Center"
                                                    Margin="4, 0, 0, 0"
                                                                                
                                                                            
                                                                                                                                        
                                                                                                
                                                        />
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Margin="4, 0, 0, 0"
                                                    Text=":"
                                                    />
                                                <ComboBox x:ConnectionId='13'
                                                    VerticalAlignment="Center"
                                                                                  
                                                                            
                                                    Margin="4, 0, 0, 0"
                                                                                                  
                                                                                                                                          />
                                            </StackPanel>
                                            <HyperlinkButton x:ConnectionId='10'
                                        Grid.Column="6"
                                        Content="X"
                                                                        
                                                                     
                                        HorizontalAlignment="Center"
                                        Foreground="Red"
                                               />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>

                        </ListView>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
        </ScrollViewer>
    </Grid>
</Page>

