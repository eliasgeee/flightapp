<UserControl x:ConnectionId='1'
    x:Class="FlightAppEliasGryp.Views.CrewMemberLogicControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlightAppEliasGryp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <StackPanel Padding="0, 50, 50, 50">
        <StackPanel Spacing="10">
            <TextBlock Text="Username *" FontWeight="Bold"/>
            <TextBox x:ConnectionId='5' x:Name="Username" Width="200" HorizontalAlignment="Left"                                   />
        </StackPanel>
        <StackPanel Spacing="10" Margin="0, 8, 0, 0">
            <TextBlock Text="Password *" FontWeight="Bold" />
            <PasswordBox x:ConnectionId='3' x:Name="Password" Width="200" HorizontalAlignment="Left"
                                                                   />
            <TextBlock x:ConnectionId='4' x:Name="ErrorMsg" Foreground="Red"                                                 TextWrapping="Wrap"/>
        </StackPanel>
        <Button x:ConnectionId='2' Content="Login" Margin="0, 24, 0, 0" HorizontalAlignment="Left"                                                 />
    </StackPanel>
</UserControl>

