<UserControl
    x:Class="FlightAppEliasGryp.Views.PassengerItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlightAppEliasGryp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    MaxHeight="200"
    Margin="4, 4, 0, 4"
    >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="..\Images/plane_seat.jpg" AlignmentY="Top" AlignmentX="Center" Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel  AllowDrop="True" x:Name="PassengerNameContainer"
          CanDrag="True" Tag="{x:Bind Seat.Passenger}" VerticalAlignment="Center"  HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock Text="{x:Bind Seat.GetPassenger()}" 
               x:Name="Passenger_Text"
                       
                       TextWrapping="Wrap"
                       MaxWidth="30"
                   />
        </StackPanel>
    </Grid>
</UserControl>
